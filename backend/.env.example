# Backend (.env.example)
# Copia este archivo a `.env` y completa los valores.

# Django
DJANGO_SECRET_KEY=your_secret_key_here
DEBUG=True

# MongoDB (si usas Atlas, define MONGO_USE_ATLAS=True y MONGO_URI en lugar de host/port)
MONGO_USE_ATLAS=False
MONGO_URI=
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB_NAME=image_upload_db
MONGO_USER=
MONGO_PASSWORD=
MONGO_AUTH_SOURCE=admin

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Nota:
# - No subas el archivo `.env` al repositorio. Añádelo a .gitignore.
# - Si usas MongoDB Atlas, pon MONGO_USE_ATLAS=True y define MONGO_URI con la cadena de conexión.